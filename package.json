{
  "name": "pre-dategrip",
  "version": "0.1.0",
  "private": true,
  "description": "High-performance RDBMS management tool for Windows",
  "scripts": {
    "prepare": "husky",
    "lint": "scripts\\run-lint.bat",
    "lint:frontend": "cd frontend && npm run lint",
    "lint:fix": "cd frontend && npm run lint:fix",
    "build:frontend": "cd frontend && npm run build",
    "build": "scripts\\build.bat Release",
    "package": "scripts\\package.bat"
  },
  "devDependencies": {
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7"
  },
  "lint-staged": {
    "frontend/src/**/*.{ts,tsx,js,jsx}": [
      "npx biome check --write --config-path=frontend"
    ],
    "frontend/src/**/*.css": [
      "npx biome check --write --config-path=frontend"
    ],
    "src/**/*.{cpp,h}": [
      "clang-format -i --style=file"
    ]
  }
}
