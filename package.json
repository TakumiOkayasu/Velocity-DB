{
  "name": "pre-dategrip",
  "version": "0.1.0",
  "private": true,
  "description": "High-performance RDBMS management tool for Windows",
  "scripts": {
    "prepare": "husky",
    "lint": "uv run scripts/pdg.py lint",
    "lint:frontend": "cd frontend && npm run lint",
    "lint:fix": "cd frontend && npm run lint:fix",
    "build:frontend": "cd frontend && npm run build",
    "build": "uv run scripts/pdg.py build backend",
    "package": "uv run scripts/pdg.py package"
  },
  "devDependencies": {
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7"
  },
  "lint-staged": {
    "frontend/src/**/*.{ts,tsx,js,jsx,json,css}": [
      "npx biome check --write --config-path=frontend"
    ],
    "backend/**/*.{cpp,h}": [
      "clang-format -i --style=file"
    ]
  }
}
